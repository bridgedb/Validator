  <groupId>com.github.bridgedb</groupId>
  <artifactId>validator-metadata</artifactId>
  <name>DataDesc Validator MetaData</name>
  <url>http://maven.apache.org</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
     <build>
        <plugins>
            <plugin>
                <groupId>com.jolira</groupId>
                <artifactId>onejar-maven-plugin</artifactId>
                <version>1.4.4</version>
               <executions>
                    <execution>
                        <configuration>
                            <mainClass>uk.ac.manchester.cs.openphacts.ims.loader.RunLoader</mainClass>
                            <!--<onejarVersion>0.97</onejarVersion>-->
                            <attachToBuild>true</attachToBuild>
                            <!--<filename>validator-onejar-1.2.0.jar</filename>-->
                        </configuration>
                        <goals>
                            <goal>one-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
	</build>

  <dependencies>
